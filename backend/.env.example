# PKI Platform backend example environment configuration
# Copy this file to `.env` and adjust values as needed for your environment.

# Core app settings
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=dev-secret-key
LOG_LEVEL=DEBUG

# ⚠️ SECURITY WARNING: AUTH_DISABLED=true bypasses ALL authentication!
# NEVER enable this in production. Only use for local development/testing.
AUTH_DISABLED=true

# Database configuration (SQLite for local development)
DATABASE_URL=sqlite:///./pki_dev.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pki_platform
DB_USER=devuser
DB_PASSWORD=devpassword

# Admin / authentication
ADMIN_PASSWORD=ChangeMe123!
JWT_SECRET_KEY=dev-jwt-secret

# Vault (points at the Vault container by default)
VAULT_DEV_MODE=false
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=dev-root-token

# CORS / hosts
# In production, set ALLOWED_HOSTS to your domain(s) to prevent host header injection
CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Password Policy (defaults are permissive for home lab use)
# Uncomment and adjust to enforce stricter password requirements
# PASSWORD_MIN_LENGTH=8
# PASSWORD_REQUIRE_UPPERCASE=false
# PASSWORD_REQUIRE_LOWERCASE=false
# PASSWORD_REQUIRE_DIGIT=false
# PASSWORD_REQUIRE_SPECIAL=false
