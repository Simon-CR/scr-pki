# PKI Platform Development Environment Variables
# Copy this to .env and modify as needed

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Web Configuration
WEB_PORT=8080
API_URL=http://localhost:8000

# Database Configuration
POSTGRES_USER=pki_user
POSTGRES_PASSWORD=dev_password_123
POSTGRES_DB=pki

# Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_DEV_ROOT_TOKEN_ID=dev-root-token

# CA Configuration
CA_COMMON_NAME=HomeLab Root CA
CA_ORGANIZATION=HomeLab
CA_COUNTRY=US
CA_VALIDITY_DAYS=7300

# Certificate Defaults
DEFAULT_CERT_VALIDITY_DAYS=3650
DEFAULT_KEY_SIZE=4096
DEFAULT_SIGNATURE_ALGORITHM=SHA256

# Admin User (Change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@homelab.local

# JWT Configuration (Generate a secure secret!)
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# SMTP Configuration (Optional)
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRY_COUNT=3
HEALTH_CHECK_RETRY_DELAY=30

# Alert Configuration
ALERT_DAYS_BEFORE_EXPIRY=30
ALERT_CHECK_INTERVAL=3600

# Webhook Configuration (Optional)
WEBHOOK_SLACK_ENABLED=false
WEBHOOK_SLACK_URL=
WEBHOOK_DISCORD_ENABLED=false
WEBHOOK_DISCORD_URL=